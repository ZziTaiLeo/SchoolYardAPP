<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/view_card"
    android:layout_width="match_parent"
    android:layout_marginLeft="12dp"
    android:layout_marginRight="12dp"
    android:layout_height="wrap_content"
    android:layout_marginBottom="20dp"
    android:elevation="4dp"
    android:orientation="vertical"
    app:cardCornerRadius="4dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_gravity="center"
        android:layout_height="match_parent"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="10dp"
        android:alpha="0.8"
        android:background="#fafafa"
        >
        <ImageView
            android:id="@+id/yellow_image"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="top|end"
            android:layout_marginEnd="8dp"
            android:layout_marginTop="-5dp"
            android:src="@drawable/ic_bookmark_24dp" />
        <TextView
            android:id="@+id/tv_vehicle"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:background="#eceff1"
            android:gravity="center"
            android:layout_marginRight="20dp"
            android:layout_marginLeft="40dp"
            android:paddingLeft="5dp"
            android:text="vehicle"
            android:textColor="#000000"
            android:textSize="15dp" />
        <TextView
            android:id="@+id/tv_use_time"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:background="#eceff1"
            android:gravity="center"
            android:layout_toRightOf="@id/tv_vehicle"
            android:paddingLeft="5dp"
            android:text="time"
            android:layout_marginRight="20dp"
            android:textColor="#000000"
            android:textSize="15dp" />
        <TextView
            android:id="@+id/tv_distance"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:background="#eceff1"
            android:layout_toRightOf="@id/tv_use_time"
            android:gravity="center"
            android:text="5km"
            android:textColor="#000000"
            android:textSize="15dp" />

        <TextView
            android:id="@+id/tv_time"
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:layout_marginLeft="200dp"
            android:layout_below="@id/iv_destination"
            android:padding="3dp"
            android:layout_marginTop="5dp"
            android:text="2019  4/19  0:10"
            android:textColor="#2979ff"
            android:textSize="15dp" />
        <TextView
            android:id="@+id/tv_depart"
            android:layout_width="200dp"
            android:layout_height="30dp"
            android:background="#eceff1"
            android:gravity="center_vertical"
            android:layout_toRightOf="@id/iv_depart"
            android:layout_below="@id/yellow_image"
            android:layout_alignBottom="@+id/iv_depart"
            android:layout_alignTop="@+id/iv_depart"
            android:paddingLeft="5dp"
            android:text="福州大学生活三区"
            android:textColor="#000000"
            android:textSize="15dp" />
        <ImageButton
            android:id="@+id/ib_delete"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginTop="70dp"
            android:layout_marginLeft="50dp"
            android:background="@drawable/delete2"
            android:layout_toRightOf="@id/tv_destination"
            />
        <TextView
            android:id="@+id/tv_destination"
            android:layout_width="200dp"
            android:layout_height="30dp"
            android:background="#eceff1"
            android:gravity="center_vertical"
            android:layout_below="@id/iv_depart"
            android:paddingLeft="5dp"
            android:text="福州南站"
            android:layout_toRightOf="@id/iv_destination"
            android:textColor="#000000"
            android:layout_alignBottom="@+id/iv_destination"
            android:layout_alignTop="@+id/iv_destination"
            android:textSize="15dp" />

        <ImageView
            android:id="@+id/iv_depart"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_gravity="top|end"
            android:layout_marginEnd="8dp"
            android:layout_marginTop="10dp"
            android:src="@drawable/depart"
            android:layout_below="@+id/tv_vehicle"/>
        <ImageView
            android:id="@+id/iv_destination"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_gravity="top|end"
            android:layout_marginTop="10dp"
            android:src="@drawable/desitination"
            android:layout_marginEnd="8dp"
            android:layout_below="@+id/iv_depart"/>



    </RelativeLayout>

</android.support.v7.widget.CardView>
