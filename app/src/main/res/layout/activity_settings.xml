<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SettingsActivity"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@color/backgroundcolor"
        >
        <com.hd.app.TitleLayout layout="@layout/title_bar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <LinearLayout
                android:layout_width="match_parent"
                android:id="@+id/changepwd_open"
                android:layout_height="50dp"
                android:padding="8dp"
                android:background="@color/white"
                android:orientation="horizontal"
                android:layout_marginTop="20dp"
                >
                <Button
                    android:layout_width="34dp"
                    android:layout_height="match_parent"
                    android:background="@drawable/change_pwd_icon"
                    />
                <TextView
                    android:layout_gravity="center_vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="20dp"
                    android:text="@string/changePwd"
                    android:textSize="20dp"
                    android:gravity="center"
                    />

            </LinearLayout>



            <LinearLayout
                android:layout_width="match_parent"
                android:id="@+id/about_us"
                android:layout_height="50dp"
                android:padding="8dp"
                android:background="@color/white"
                android:orientation="horizontal"
                android:layout_marginTop="20dp"
                android:layout_below="@+id/changepwd_open"
                >
                <Button
                    android:layout_width="34dp"
                    android:layout_height="match_parent"
                    android:background="@drawable/about_us_icon"
                    />
                <TextView
                    android:layout_gravity="center_vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="20dp"
                    android:text="@string/aboutUs"
                    android:textSize="20dp"
                    android:gravity="center"
                    />

            </LinearLayout>


        </RelativeLayout>
    </LinearLayout>

</android.support.constraint.ConstraintLayout>